<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@drawable/menupage_background" 
  android:layout_width="fill_parent" 
  android:layout_height="fill_parent" 
  android:orientation="vertical">
    <LinearLayout
  		android:layout_width="fill_parent"
  		android:layout_height="0dp" 
  		android:layout_weight="1"
    	android:id="@+id/layoutSahanaIncidentReport">    	           	
        <ImageView 
        	android:src="@drawable/menupage_icon_incident"
        	android:id="@+id/imgIncident" 
        	android:layout_weight="1" 
        	android:layout_gravity="center"         	 
        	android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content">
        </ImageView>
        <TextView         	
        	android:id="@+id/textSahanaIncidentReport" 
        	android:text="@string/menu_page_sahana_incident_report_title" 
        	android:gravity="left"
        	android:layout_weight="1"          	 
        	android:layout_width="wrap_content"
        	android:layout_gravity="center"         	 
        	android:textSize="20dp"
        	android:typeface="serif" android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout 
    	android:layout_width="fill_parent"
  		android:layout_height="0dp" 
  		android:layout_weight="1"  	
    	android:id="@+id/layoutSahanaTaskDispatch">
        <ImageView 
        	android:src="@drawable/menupage_icon_task"        	 
        	android:id="@+id/imgTask" 
        	android:layout_weight="1" 
        	android:layout_width="wrap_content"        	
        	android:layout_gravity="center" android:layout_height="wrap_content">
        </ImageView>
        <TextView 
        	android:id="@+id/textSahanaTaskDispatch" 
        	android:text="@string/menu_page_sahana_task_dispatch_title" 
        	android:gravity="left"
        	android:layout_weight="1"          	 
        	android:layout_width="wrap_content"
        	android:layout_gravity="center"
        	android:textSize="20dp"
        	android:typeface="serif" android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout 
    	android:layout_width="fill_parent"
  		android:layout_height="0dp" 
  		android:layout_weight="1"  	
    	android:id="@+id/layoutSahanaTeamCommunication">
        <ImageView 
        	android:src="@drawable/menupage_icon_team"
        	android:id="@+id/imgTeam" 
        	android:layout_weight="1" 
        	android:layout_width="wrap_content"        	
        	android:layout_gravity="center" android:layout_height="wrap_content">
        </ImageView>
        <TextView
        	android:id="@+id/textSahanaTeamCommunication" 
        	android:text="@string/menu_page_sahana_team_communication_title"
        	android:gravity="left"
        	android:layout_weight="1"          	 
        	android:layout_width="wrap_content"
        	android:layout_gravity="center"
        	android:textSize="20dp" 
        	android:typeface="serif" android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>
